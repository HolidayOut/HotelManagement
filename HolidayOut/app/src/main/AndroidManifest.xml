<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bsd.holidayout">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".OverviewActivity"
            android:label="@string/title_activity_overview"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddonsActivity"
            android:label="@string/title_activity_addons"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RoomServiceActivity"
            android:label="@string/title_activity_room_service"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RestaurantOrderActivity"
            android:label="@string/title_activity_restaurant_order"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".FirstCourseActivity" />
        <activity android:name=".MainCourseActivity" />
        <activity android:name=".DessertActivity" />
        <activity android:name=".MenuActivity" />
        <activity android:name=".AllMealsActivity"></activity>
    </application>
    <uses-permission android:name="android.permission.INTERNET"/>
</manifest>